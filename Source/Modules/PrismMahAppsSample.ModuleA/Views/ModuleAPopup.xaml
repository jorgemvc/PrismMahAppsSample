<UserControl x:Class="PrismMahAppsSample.ModuleA.Views.ModuleAPopup"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True">
  <StackPanel>
    <TextBlock Text="This is a custom popup in the DialogPopupRegion" />
    <!-- Tiles -->
    <StackPanel Grid.Row="1"
                Orientation="Horizontal">
      <mah:Tile Title="Popup - Tile 1"
                Command="{Binding ShowModuleAPopupCommand}"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                TiltFactor="1"
                Width="100"
                Height="100" />
      <mah:Tile Title="Popup - Tile 2"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                TiltFactor="1"
                Width="100"
                Height="100" />
      <mah:Tile Title="Popup - Tile 2"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                TiltFactor="1"
                Width="100"
                Height="100" />
    </StackPanel>
  </StackPanel>
</UserControl>
